# Example environment variables for backend-django
# Copy to .env and edit before running in your environment (do NOT commit secrets).

# Django secret key (generate a secure random value for production)
SECRET_KEY=replace_with_secure_value

# JWT secretkey shared with ASP.NET backend for compatibility
ASPNET_JWT_KEY=replace_with_secure_value

# PostgreSQL database configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=maid_app
POSTGRES_SCHEMA=django_app
POSTGRES_USER=django
POSTGRES_PASSWORD=password

# Debug mode (True/False)
DEBUG=True

# Comma-separated list of allowed hosts (empty = localhost only)
ALLOWED_HOSTS=localhost,127.0.0.1

# Allow all CORS origins (True/False)
CORS_ORIGIN_ALLOW_ALL=True

# Directory to store artifacts (absolute path or relative)
# If not set, defaults to the project's `artifacts/` folder
ARTIFACTS_DIR=

# Upload limits (bytes). Default: 10MB
MAX_UPLOAD_SIZE=10485760

# Allowed upload extensions (comma separated)
ALLOWED_UPLOAD_EXTENSIONS=.csv,.keras,.h5,.zip

# Import job queue controls
IMPORT_JOB_MAX_PENDING_PER_USER=3
IMPORT_JOB_ALLOWED_EXTENSIONS=.keras,.h5,.zip
IMPORT_JOB_PENDING_STORAGE_LIMIT_MB=512

# Celery / Redis configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
# Set to true to run tasks synchronously during local dev/tests
CELERY_TASK_ALWAYS_EAGER=False
